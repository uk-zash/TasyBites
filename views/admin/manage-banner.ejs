<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Existing meta tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="New Tasty Bites - Delicious food in Mahul, India"
    />
    <meta
      name="keywords"
      content="New Tasty Bites, fast food, burgers, pizza, Mahul, food delivery"
    />
    <!-- Open Graph / Facebook -->
    <meta property="og:title" content="<%= title %> | New Tasty Bites" />
    <meta
      property="og:description"
      content="Enjoy the best food at New Tasty Bites."
    />
    <meta property="og:image" content="/images/og-image.jpg" />
    <!-- Replace with actual image path -->
    <!-- Twitter -->
    <meta name="twitter:title" content="<%= title %> | New Tasty Bites" />
    <meta
      name="twitter:description"
      content="Enjoy the best food at New Tasty Bites."
    />
    <meta name="twitter:image" content="/images/og-image.jpg" />
    <!-- Replace with actual image path -->

    <meta charset="UTF-8" />
    <title><%= title %> - New Tasty Bites</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/nav.css">
  </head>
  <body>
<%- include('../partials/_navbar') %>

<div class="container mx-auto px-4 mt-20">

<div class="container mx-auto px-4 mt-16 max-w-lg">
  <h1 class="text-2xl font-semibold mb-6">Manage Promotional Banner</h1>

  <!-- Display success or error messages -->
  <% if (success_messages && success_messages.length > 0) { %>
    <% success_messages.forEach(function(message) { %>
      <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4">
        <p><%= message %></p>
      </div>
    <% }); %>
  <% } %>
  <% if (error_messages && error_messages.length > 0) { %>
    <% error_messages.forEach(function(message) { %>
      <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4">
        <p><%= message %></p>
      </div>
    <% }); %>
  <% } %>

  <!-- Banner Preview -->
  <% if (banner.imageURL && banner.imageURL !== '') { %>
    <div class="mb-6">
      <p class="font-semibold mb-2">Current Banner Image:</p>
      <img src="<%= banner.imageURL %>" alt="Promotional Banner" class="w-full h-auto rounded">
    </div>
  <% } else if (banner.content && banner.content !== '') { %>
    <div class="mb-6">
      <p class="font-semibold mb-2">Current Banner Text:</p>
      <div class="bg-yellow-300 text-center py-4 rounded">
        <p class="text-lg font-semibold"><%= banner.content %></p>
      </div>
    </div>
  <% } else { %>
    <p class="mb-6">No promotional banner is currently set.</p>
  <% } %>

  <!-- Update Banner Form -->
  <form action="/admin/banner" method="POST" enctype="multipart/form-data">
    <!-- Banner Type Radio Buttons -->
    <div class="mb-4">
      <label class="block text-gray-700 font-semibold mb-2">Banner Type</label>
      <div class="flex items-center mb-2">
        <input type="radio" name="bannerType" value="text" id="bannerTypeText" class="mr-2" <%= (!banner.imageURL || banner.imageURL === '') ? 'checked' : '' %>>
        <label for="bannerTypeText">Text</label>
      </div>
      <div class="flex items-center">
        <input type="radio" name="bannerType" value="image" id="bannerTypeImage" class="mr-2" <%= (banner.imageURL && banner.imageURL !== '') ? 'checked' : '' %>>
        <label for="bannerTypeImage">Image</label>
      </div>
    </div>
  
    <!-- Banner Text Input -->
    <div class="mb-4" id="bannerTextInput" <%= (banner.imageURL && banner.imageURL !== '') ? 'style="display: none;"' : '' %>>
      <label class="block text-gray-700">Banner Text</label>
      <textarea name="content" rows="3" class="w-full border border-gray-300 rounded px-3 py-2"><%= banner.content || '' %></textarea>
    </div>
  
    <!-- Banner Image Input -->
    <div class="mb-6" id="bannerImageInput" <%= (!banner.imageURL || banner.imageURL === '') ? 'style="display: none;"' : '' %>>
      <label class="block text-gray-700">Banner Image</label>
      <input type="file" name="image" accept="image/*" class="w-full">
      <% if (banner.imageURL && banner.imageURL !== '') { %>
        <p class="text-sm text-gray-600 mt-1">Uploading a new image will replace the current banner image.</p>
      <% } %>
    </div>
  
    <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded hover:bg-blue-600">
      Update Banner
    </button>
  </form>
  
</div>


</div>

<%- include("../partials/_footer") %>

<script>
  // Get elements
  const hamburgerMenuButton = document.getElementById("hamburger-menu");
  const mobileMenu = document.getElementById("mobile-menu");

  // Toggle menu visibility on hamburger click
  hamburgerMenuButton.addEventListener("click", function() {
    mobileMenu.classList.toggle("open"); // Show or hide the mobile menu
    hamburgerMenuButton.classList.toggle("active"); // Toggle hamburger to cross and vice versa
  });

  document.addEventListener('DOMContentLoaded', function() {
    const bannerTypeText = document.getElementById('bannerTypeText');
    const bannerTypeImage = document.getElementById('bannerTypeImage');
    const bannerTextInput = document.getElementById('bannerTextInput');
    const bannerImageInput = document.getElementById('bannerImageInput');

    function toggleBannerInputs() {
      if (bannerTypeText.checked) {
        bannerTextInput.style.display = 'block';
        bannerImageInput.style.display = 'none';
      } else if (bannerTypeImage.checked) {
        bannerTextInput.style.display = 'none';
        bannerImageInput.style.display = 'block';
      }
    }

    bannerTypeText.addEventListener('change', toggleBannerInputs);
    bannerTypeImage.addEventListener('change', toggleBannerInputs);
  });
</script>






</body>
</html>