<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - New Tasty Bites Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/nav.css">
    <style>
        .login-card {
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            transition: transform 0.2s ease;
        }
        .login-card:hover {
            transform: translateY(-2px);
        }
        .input-field:focus {
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.5);
        }
    </style>
</head>
<body class="bg-gray-50">
    <%- include('../partials/_navbar') %>

    <main class="container mx-auto px-4 py-8 mt-24">
        <div class="max-w-md mx-auto">
            <!-- Login Card -->
            <div class="login-card bg-white rounded-xl p-8">
                <div class="text-center mb-8">
                    <i class="fas fa-lock text-4xl text-blue-500 mb-4"></i>
                    <h1 class="text-3xl font-bold text-gray-800">Admin Login</h1>
                    <p class="text-gray-600 mt-2">Access your admin dashboard</p>
                </div>

                <!-- Error Messages -->
                <% if (error && error.length > 0) { %>
                    <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6 rounded-lg flex items-center">
                        <i class="fas fa-exclamation-circle text-red-400 mr-3"></i>
                        <p class="text-red-700"><%= error %></p>
                    </div>
                <% } %>

                <!-- Login Form -->
                <form action="/admin/login" method="POST">
                    <div class="mb-6">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Username</label>
                        <input type="text" name="username" required
                               class="input-field w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    </div>
                    <div class="mb-6">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Password</label>
                        <input type="password" name="password" required
                               class="input-field w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    </div>
                    <button type="submit" 
                            class="w-full bg-blue-500 hover:bg-blue-600 text-white py-3 rounded-lg font-semibold transition-colors">
                        <i class="fas fa-sign-in-alt mr-2"></i> Login
                    </button>
                </form>
            </div>

            <!-- Security Notice -->
            <div class="mt-6 text-center text-sm text-gray-500">
                <i class="fas fa-shield-alt mr-1"></i>
                Your login is secured with encryption
            </div>
        </div>
    </main>

    <%- include("../partials/_footer") %>

    <script>
        // Mobile menu toggle
        // const hamburgerMenuButton = document.getElementById("hamburger-menu");
        // const mobileMenu = document.getElementById("mobile-menu");

        // hamburgerMenuButton.addEventListener("click", () => {
        //     mobileMenu.classList.toggle("open");
        //     hamburgerMenuButton.classList.toggle("active");
        // });

        // Add focus styles to form inputs
        document.querySelectorAll('.input-field').forEach(input => {
            input.addEventListener('focus', () => {
                input.classList.add('ring-2', 'ring-blue-500');
            });
            input.addEventListener('blur', () => {
                input.classList.remove('ring-2', 'ring-blue-500');
            });
        });
    </script>
</body>
</html>